      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3 text-light" href="/"><span>自分用メモ</span></a>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
